<%= provide(:title, 'Create an event') %>
<h1>Create an event</h1>
<div>
    <%= form_for(@event, url: new_event_path) do |f| %>
        <%= render 'shared/error_messages', object: f.object%>
        <%= f.label :location %>
        <%= f.text_field :location %>
        <%= f.label :date %>
        <%= f.text_field :date %>
        <%= f.label :description %>
        <%= f.text_area :description %>
        <%= f.submit :create %>
    <% end%>
</div>
