<%= form_for(@event, url: events_path) do |f| %>
    <%= render 'shared/error_messages', object: f.object%>
    <div class='form-row'>
        <div class='form-group col-md-10 offset-md-1'>
            <%= f.label :location %>
            <%= f.text_field :location, placeholder: 'Location', class: 'form-control'%>
        </div>
    </div>
    <div class='form-row'>
        <div class='form-group col-md-12'>
            <%= f.label :date %></br>
            <%= f.datetime_select(:date, {}, {class: 'custom-select col-md-2'})%>
        </div>
    </div>
    <div class='form-row'>
        <div class='form-group col-md-10 offset-md-1'>
            <%= f.label :description %>
            <%= f.text_area :description, placeholder: 'Description', class: 'form-control' %></br>
            <%= f.submit 'Create event', class: 'btn btn-dark' %>
        </div>
    </div>
<% end%>