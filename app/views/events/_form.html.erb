<%= form_for(@event, url: new_event_path) do |f| %>
    <%= render 'shared/error_messages', object: f.object%>
    <div class='form-row'>
        <div class='form-group col-md-5 offset-md-1 '>
            <%= f.label :location %>
            <%= f.text_field :location, placeholder: 'Location', class: 'form-control'%>
        </div>
        <div class='form-group col-md-5'>
            <%= f.label :date %>
            <%= f.text_field :date, placeholder: 'Date', class: 'form-control'%>
        </div>
    </div>
    <div class='form-row'>
        <div class='form-group col-md-10 offset-md-1'>
            <%= f.label :description %>
            <%= f.text_area :description, placeholder: 'Description', class: 'form-control' %></br>
            <%= f.submit 'Create event', class: 'btn btn-dark' %>
        </div>
    </div>
<% end%>